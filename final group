#include <iostream>
using namespace std;

int main() {
    int pin, choice;
    int balance = 10000;  
    int deposit, withdraw;

    // Login
    cout << "Enter PIN: ";
    cin >> pin;

    if (pin != 4444) {
        cout << "Incorrect PIN. Access Denied.\n";
        return 0; 
    }

    do {
        // Menu
        cout << "\n===== ATM MENU =====\n";
        cout << "1. Check Balance\n";
        cout << "2. Deposit\n";
        cout << "3. Withdraw\n";
        cout << "4. Exit\n";
        cout << "Choose option: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Your balance is: " << balance << endl;
                break;

            case 2:
                cout << "Enter amount to deposit: ";
                cin >> deposit;
                balance += deposit;
                cout << "Deposit successful!\n";
                break;

            case 3:
                cout << "Enter amount to withdraw: ";
                cin >> withdraw;
                if (withdraw > balance) {
                    cout << "Not enough balance!\n";
                } else {
                    balance -= withdraw;
                    cout << "Withdrawal successful!\n";
                }
                break;

            case 4:
                cout << "Thank you for using the ATM!\n";
                break;

            default:
                cout << "Invalid choice. Try again.\n";
        }

    } while (choice != 4);

    return 0;
}
